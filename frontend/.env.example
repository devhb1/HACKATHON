# ==========================================
# FRONTEND ENVIRONMENT VARIABLES
# Multi-Agent DeFi Yield Optimizer
# ==========================================

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_VERCEL_URL=your_vercel_url_when_deployed

# ==========================================
# WEB3 & BLOCKCHAIN CONFIGURATION
# ==========================================

# Alchemy (Required for Ethereum & Polygon)
# Get from: https://alchemy.com/
NEXT_PUBLIC_ALCHEMY_ID=your_alchemy_api_key

# Infura (Alternative RPC provider)
# Get from: https://infura.io/
NEXT_PUBLIC_INFURA_ID=your_infura_project_id

# WalletConnect (Required for wallet integration)
# Get from: https://walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ==========================================
# SMART CONTRACT ADDRESSES
# ==========================================

# Deployed contract addresses (updated after deployment)
NEXT_PUBLIC_PRICE_AGGREGATOR_ADDRESS=
NEXT_PUBLIC_YIELD_OPTIMIZER_ADDRESS=
NEXT_PUBLIC_CROSS_CHAIN_MANAGER_ADDRESS=

# ==========================================
# NETWORK CONFIGURATION
# ==========================================

# Default chain for the application
NEXT_PUBLIC_DEFAULT_CHAIN=sepolia

# Supported blockchain networks
NEXT_PUBLIC_SUPPORTED_CHAINS=sepolia,mainnet,polygon,avalanche

# Custom RPC URLs (optional)
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
NEXT_PUBLIC_AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable/disable AI agents
NEXT_PUBLIC_ENABLE_AI_AGENTS=true

# Enable/disable analytics dashboard
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable/disable cross-chain features
NEXT_PUBLIC_ENABLE_CROSS_CHAIN=true

# Enable/disable automation features
NEXT_PUBLIC_ENABLE_AUTOMATION=true

# Enable/disable VRF features
NEXT_PUBLIC_ENABLE_VRF=true

# Enable/disable CCIP features
NEXT_PUBLIC_ENABLE_CCIP=true

# ==========================================
# API ENDPOINTS
# ==========================================

# Backend API endpoint
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# AI Service endpoint
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:3002

# External APIs
NEXT_PUBLIC_COINGECKO_API_URL=https://api.coingecko.com/api/v3
NEXT_PUBLIC_DEFILLAMA_API_URL=https://api.llama.fi

# ==========================================
# ANALYTICS & MONITORING (Optional)
# ==========================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Enable debug mode
NEXT_PUBLIC_DEBUG_MODE=true

# Enable verbose logging
NEXT_PUBLIC_VERBOSE_LOGGING=false

# Mock data for development
NEXT_PUBLIC_USE_MOCK_DATA=false
